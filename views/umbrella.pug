extends layout

block content
  div(class="container-fluid")
  //- let items=[{colour:"Rainbow",height:6,price:20.59},{colour:"Crimson Red",height:7,price:17.39},{colour:"Black",height:6,price:14.39}]
  -let items = results
  div(class="container-fluid") 
    div(class="row m-1") 
      each item in items
       - let destination = `dispatch(\"/umbrella/update?id=${item._id}\")` 
       div(class="row-sm-2", class="m-1") Umbrella of #{item.colour}(#{item.height}) is #{item.prize} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
 
